{
	"private": true,
	"scripts": {
		"lint": "run-p lint:*",
		"lint:js": "xo",
		"lint:css": "stylelint --allow-empty-input source/**/*.css",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"test": "run-s lint:* build",
		"build": "webpack --mode=production",
		"watch": "webpack --mode=development --watch",
		"watch:firefox": "web-ext run --source-dir=distribution",
		"watch-firefox": "run-p watch watch:firefox",
		"prerelease:version": "VERSION=$(utc-version); echo $VERSION; dot-json distribution/manifest.json version $VERSION",
		"prerelease:firefox": "web-ext build --source-dir=distribution --overwrite-dest",
		"release": "run-s build prerelease:*",
		"release:cws": "webstore upload --source=distribution --auto-publish",
		"release:amo": "web-ext-submit --source-dir distribution"
	},
	"dependencies": {
		"fetch-suspense": "^1.2.0",
		"react": "^16.11.0",
		"react-dom": "^16.11.0",
		"styled-components": "^5.0.0-beta.9",
		"webext-options-sync": "^1.0.0",
		"webextension-polyfill": "^0.5.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.5.0",
		"@types/chrome": "^0.0.91",
		"@types/copy-webpack-plugin": "^5.0.0",
		"@types/firefox-webext-browser": "^70.0.1",
		"@types/node": "^12.11.6",
		"@types/react": "^16.9.9",
		"@types/react-dom": "^16.9.2",
		"@types/styled-components": "^4.1.19",
		"@types/terser-webpack-plugin": "^1.2.1",
		"@types/webpack": "^4.39.5",
		"chrome-webstore-upload-cli": "^1.2.0",
		"copy-webpack-plugin": "^5.0.4",
		"dot-json": "^1.1.0",
		"eslint": "^6.5.1",
		"eslint-config-xo": "^0.27.2",
		"fork-ts-checker-webpack-plugin": "^1.6.0",
		"npm-run-all": "^4.1.5",
		"size-plugin": "^2.0.1",
		"stylelint": "^11.1.1",
		"stylelint-config-xo": "^0.15.0",
		"terser-webpack-plugin": "^2.2.1",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.4.1",
		"typescript": "^3.6.4",
		"utc-version": "^2.0.1",
		"web-ext": "^3.2.0",
		"web-ext-submit": "^3.2.0",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.9",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"ignores": [
			"distribution"
		],
		"globals": [
			"browser"
		]
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	}
}
